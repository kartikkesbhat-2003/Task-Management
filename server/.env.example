# Example environment variables for the server
# Copy this file to `.env` and populate secure values before running the server.

# MongoDB connection string (local or cloud)
MONGO_URI=mongodb://127.0.0.1:27017/taskdb

# JWT secret used to sign tokens (use a long random value in production)
JWT_SECRET=replace_with_a_strong_secret

# Server port
PORT=5000

# Node environment (development | production)
NODE_ENV=development

# Optional: allowed client origin for CORS (change to your client URL)
# CLIENT_URL=http://localhost:5173
